<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vyacheslav.billiardscore.MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/plusbutton"
    android:id="@+id/plusbutton"
    android:layout_above="@+id/minusbutton"
    android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minusbutton"
        android:id="@+id/minusbutton"
        android:layout_alignBaseline="@+id/minusbutton2"
        android:layout_alignBottom="@+id/minusbutton2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/score"
        android:id="@+id/score"
        android:layout_above="@+id/plusbutton"
        android:layout_alignEnd="@+id/reset"
        android:layout_marginEnd="14dp" />

    <TextView
        android:text="@string/partscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/partscore"
        android:layout_above="@+id/score"
        android:layout_alignStart="@+id/score"
        android:layout_marginBottom="74dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plusbutton"
        android:id="@+id/plusbutton2"
        android:layout_alignBaseline="@+id/plusbutton"
        android:layout_alignBottom="@+id/plusbutton"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minusbutton"
        android:id="@+id/minusbutton2"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/reset"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/score"
        android:id="@+id/score2"
        android:layout_marginEnd="35dp"
        android:layout_above="@+id/plusbutton2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/partscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/partscore2"
        android:layout_alignBaseline="@+id/partscore"
        android:layout_alignBottom="@+id/partscore"
        android:layout_alignStart="@+id/score2" />


</RelativeLayout>
